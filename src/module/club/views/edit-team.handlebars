<form id="formulario-editar" method="POST" action="/club/edit-team?:id" enctype="multipart/form-data">
  <div class="form-group">
    <label for="nombre">Club name:*</label>
    <input type="text" name="nombre" class="form-control" value="{{data.equipo.nombre}}" required>
  </div>
  <div class="form-group">
    <label for="tla">TLA:*</label>
    <input type="text" name="abreviatura" class="form-control" value="{{data.equipo.abreviatura}}" required>
  </div>
  <div class="form-group">
    <label for="estadio">Stadium:*</label>
    <input type="text" name="estadio" class="form-control" value="{{data.equipo.estadio}}" required>
  </div>
  <div class="form-group">
    <label for="direccion">Address:*</label>
    <input type="text" name="direccion" class="form-control" value="{{data.equipo.direccion}}" required>
  </div>
  <div class="form-group">
    <label for="fundacion">Foundation year:*</label>
    <input type="number" min="1860" max="2020" name="anoFundacion" class="form-control" value="{{data.equipo.anoFundacion}}" required>
  </div>
  <div class="form-group">
    <label for="numeroId">Id:*</label>
    <input type="number" name="numeroId" min="1000" value="{{data.equipo.numeroId}}" readonly class="form-control">
  </div>
  <div class="form-group">
    <label for="telefono">Phone number:*</label>
    <input  name="telefono" class="form-control" value="{{data.equipo.telefono}}" required>
  </div>
  <div class="form-group">
    <label for="website">Website: *</label>
    <input type="text" class="form-control" name="website" value="{{data.equipo.website}}" required>
  </div>
  <div class="form-group">
    <label for="pais">Area:*</label>
    <input type="text" class="form-control" name="pais" value="{{data.equipo.pais}}" required>
  </div>
  <div class="form-group">
      <label for="imagen">CrestURL:*</label>
      <input type="file" class="form-control" text="Seleccionar escudo" name="fotoEscudo">
  </div>
  <p>*Required field</p>
  <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
  <a class="btn btn-danger" href="/club"><i class="fas fa-times"></i> Discard changes</a>
</form>
